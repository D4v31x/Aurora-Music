<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="linear"
                android:startColor="#668B5CF6"
                android:centerColor="#592D1B4E"
                android:endColor="#660F3460"
                android:angle="135" />
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#26FFFFFF" />
        </shape>
    </item>
</layer-list>
